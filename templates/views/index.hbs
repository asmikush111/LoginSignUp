<!DOCTYPE html>
<html lang="en">
<head>
    {{>header}}
</head>
<body>
 <div class="full-page">
    {{>navbar}}
   <div id="login-form" class="login-page">
      <div class="form-box">
       
        <div class="button-box">
            <button class="toggle-btn" onclick="login()">Login</button>
            <button class="toggle-btn" onclick="register()">Register</button>
            <button id="btn"class="toggle-btn" >Login</button>
        </div>
     
       <form action="/login" method="POST" id="login" class="input-group-login">
           <input name="email" type="text" class="input-field" placeholder="Email Id" required/>
           <input name="password" type="password" class="input-field" placeholder="Enter Password" required/>
           <button class="submit-btn">Log In</button>
        </form>

         <form  action="/register" method="POST" id="register" class="input-group-register">
            <input name="firstname" type="text" class="input-field" placeholder="First Name" required/>
            <input name="lastname" type="text" class="input-field" placeholder="Last Name" required/>
            <input name="email" type="email" class="input-field" placeholder="Email Id" required/>
            <input name="password" type="password" class="input-field" placeholder="Enter Password" required/>
            <input name="confirmpassword" type="password" class="input-field" placeholder="Confirm Password" required/>
           <button class="submit-btn">Register</button>
         </form>
        
      </div>    
    </div>
 </div>
 <script>
    var x=document.getElementById('login');
    var y=document.getElementById('register');
    var z=document.getElementById('btn');
    function register()
    {
        x.style.left='-400px';
        y.style.left='50px';
        z.style.left='110px';
        z.innerHTML="Register";
    }
     function login()
    {
        x.style.left='50px';
        y.style.left='450px';
        z.style.left='0px';
        z.innerHTML="Login";
    }

    var modal=document.getElementById('login-form');
    window.onclick=function(event)
    {
        if(event.target==model)
        {
            modal.style.display="none";
        }
    }
 </script>

</body>
</html>